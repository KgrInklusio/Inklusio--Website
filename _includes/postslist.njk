<section>
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
			<p>
	<time class="postlist-date" datetime="{{ post.date | htmlDateString }}"><small>{{ post.date | readableDate }}</time>
 by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
				</time>
			</p>
		</article>
	{% endfor %}
</section>
